{% extends '@Abt/base.html.twig' %}

{% block body %}

    <div class="row header-show-category">
        <div class="page-header">
            <h1><i class="glyphicon glyphicon-share-alt width-glyph"></i>{{ category.name }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Articles RÃ©cents</h3>
                </div>
                <div class="panel-body">
                    <div class="list-group">
                    {% for post in recentPosts %}
                        <a href="{{ post.link }}" class="list-group-item">{{ post.title }}</a>
                    {% endfor %}
                    </div>
                </div>
            </div>
        </div>

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Flux RSS</h3>
            </div>
            <div class="panel-body">
                <div class="list-group">
                    {% for link in xmlLink %}
                        <p></p><a href="{{ path('showlink', {'id': link.id}) }}">{{ link.name }}</a></p>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Liens URL</h3>
            </div>
            <div class="panel-body">
                <div class="list-group">
                    {% for link in urlLink %}
                        <p></p><a href="{{ path('showlink', {'id': link.id}) }}">{{ link.name }}</a></p>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}